<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--
     Se buscan todos los componentes declarados con anotaciones dentro
     del paquete "com.dosideas.business".
     Todas las clases anotadas con alguno de:
         @Component
         @Service
         @Repository
         @Configurable
     serán agregadas al factory de Spring automáticamente, sin necesidad de
     declararlas en este XML.
    -->
    <context:component-scan base-package="com.dosideas.service"/>

</beans>